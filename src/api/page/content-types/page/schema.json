{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Static pages like About, Contact, etc."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "shared.rich-text",
        "shared.media",
        "shared.quote",
        "shared.slider"
      ]
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "pages"
    },
    "showInNavigation": {
      "type": "boolean",
      "default": false
    },
    "navigationOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
